{
	"name": "murmurations-tools",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:local": "vite dev --host 0.0.0.0 --port 80",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint . --fix",
		"format": "prettier --write .",
		"test:integration": "PUBLIC_LIBRARY_URL=\"https://test-library.murmurations.network\" PUBLIC_INDEX_URL=\"https://test-index.murmurations.network\" playwright test",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"prepare": "husky"
	},
	"dependencies": {
		"@floating-ui/dom": "1.6.12",
		"@tanstack/svelte-query": "^5.62.9",
		"bcryptjs": "^2.4.3",
		"cuid": "^3.0.0",
		"highlight.js": "11.11.0",
		"mongodb": "^6.12.0",
		"svelte-awesome": "^3.3.5",
		"uuid": "^11.0.3"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@skeletonlabs/skeleton": "2.10.4",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/typography": "0.5.15",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@types/node": "22.10.2",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "10.4.20",
		"cookie": "^1.0.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"postcss": "8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"set-cookie-parser": "^2.7.1",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^6.0.5",
		"vite-plugin-tailwind-purgecss": "0.3.5",
		"vitest": "^2.1.8"
	}
}
