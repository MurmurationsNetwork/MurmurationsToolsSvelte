{
	"name": "murmurations-tools",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:local": "vite dev --host 0.0.0.0 --port 80",
		"build": "vite build",
		"preview": "vite preview",
		"test": "pnpm test:integration && pnpm test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint . --fix",
		"format": "prettier --write .",
		"test:integration": "PUBLIC_LIBRARY_URL=\"https://test-library.murmurations.network\" PUBLIC_INDEX_URL=\"https://test-index.murmurations.network\" playwright test",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"prepare": "husky",
		"db:generate": "npx drizzle-kit generate --dialect=sqlite --schema src/lib/db/migrations/schema.ts",
		"db:list": "wrangler d1 migrations list local-tools --local",
		"db:list:preview": "wrangler d1 migrations list test-tools --env preview",
		"db:list:production": "wrangler d1 migrations list tools --env production",
		"db:migrate": "wrangler d1 migrations apply local-tools --local",
		"db:migrate:preview": "wrangler d1 migrations apply test-tools --env preview --remote",
		"db:migrate:production": "wrangler d1 migrations apply tools --env production --remote"
	},
	"dependencies": {
		"@floating-ui/dom": "1.7.3",
		"@paralleldrive/cuid2": "^2.2.2",
		"@tanstack/svelte-query": "^5.83.0",
		"bcryptjs": "^3.0.2",
		"drizzle-orm": "^0.44.3",
		"highlight.js": "11.11.1",
		"svelte-awesome": "^3.3.5",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250805.0",
		"@eslint/js": "^9.32.0",
		"@playwright/test": "^1.54.2",
		"@skeletonlabs/skeleton": "2.11.0",
		"@skeletonlabs/tw-plugin": "0.4.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-cloudflare": "^7.1.2",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "0.5.10",
		"@tailwindcss/typography": "0.5.16",
		"@types/eslint": "^9.6.1",
		"@types/node": "24.0.10",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "10.4.21",
		"cookie": "^1.0.2",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"postcss": "8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"set-cookie-parser": "^2.7.1",
		"svelte": "^5.36.0",
		"svelte-check": "^4.3.1",
		"tailwindcss": "3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "^6.3.5",
		"vite-plugin-tailwind-purgecss": "0.3.5",
		"vitest": "^3.2.4",
		"wrangler": "^4.24.3"
	}
}
