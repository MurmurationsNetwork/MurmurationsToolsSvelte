{
	"name": "murmurations-tools",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:local": "vite dev --host 0.0.0.0 --port 80",
		"build": "vite build",
		"preview": "vite preview",
		"test": "pnpm test:integration && pnpm test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint . --fix",
		"format": "prettier --write .",
		"test:integration": "PUBLIC_LIBRARY_URL=\"https://test-library.murmurations.network\" PUBLIC_INDEX_URL=\"https://test-index.murmurations.network\" playwright test",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"prepare": "husky",
		"db:generate": "npx drizzle-kit generate --dialect=sqlite --schema src/lib/db/migrations/schema.ts",
		"db:list": "wrangler d1 migrations list local-tools --local",
		"db:list:preview": "wrangler d1 migrations list test-tools --env preview",
		"db:list:production": "wrangler d1 migrations list tools --env production",
		"db:migrate": "wrangler d1 migrations apply local-tools --local",
		"db:migrate:preview": "wrangler d1 migrations apply test-tools --env preview --remote",
		"db:migrate:production": "wrangler d1 migrations apply tools --env production --remote"
	},
	"dependencies": {
		"@floating-ui/dom": "1.6.12",
		"@paralleldrive/cuid2": "^2.2.2",
		"@tanstack/svelte-query": "^5.64.1",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.38.4",
		"highlight.js": "11.11.1",
		"svelte-awesome": "^3.3.5",
		"uuid": "^11.0.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241230.0",
		"@playwright/test": "^1.50.0",
		"@skeletonlabs/skeleton": "2.10.4",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/typography": "0.5.15",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@types/node": "22.10.6",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "10.4.20",
		"cookie": "^1.0.2",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"postcss": "8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"set-cookie-parser": "^2.7.1",
		"svelte": "^5.19.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.19.1",
		"vite": "^6.0.7",
		"vite-plugin-tailwind-purgecss": "0.3.5",
		"vitest": "^3.0.2",
		"wrangler": "^3.100.0"
	}
}
